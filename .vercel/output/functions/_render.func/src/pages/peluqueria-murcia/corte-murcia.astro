                start: "top top",
                end: "bottom top",
                scrub: 1,
            },
        });

        // Reveal Text
        gsap.utils.toArray(".reveal-text").forEach((element: any) => {
            gsap.to(element, {
                opacity: 1,
                y: 0,
                duration: 1,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: element,
                    start: "top 85%",
                },
            });
        });

        // Reveal Elements
