---
import Layout from "../../layouts/Layout.astro";
import LoginForm from "../../components/admin/LoginForm";
---

<Layout title="Acceso Admin | Angeles Nails Studio">
    <div
        class="min-h-screen flex items-center justify-center bg-cream-50 py-12 px-4 sm:px-6 lg:px-8"
    >
        <div
            class="max-w-md w-full space-y-8 bg-white p-10 rounded-xl shadow-2xl"
        >
            <div class="text-center">
                <h2 class="mt-6 text-3xl font-serif font-bold text-brown-800">
                    Panel de Administración
                </h2>
                <p class="mt-2 text-sm text-brown-600">
                    Inicia sesión para gestionar el contenido
                </p>
            </div>
            <LoginForm client:load />
        </div>
    </div>
</Layout>
