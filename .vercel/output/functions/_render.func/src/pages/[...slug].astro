---
import Layout from "../layouts/Layout.astro";
import CTAWhatsApp from "../components/CTAWhatsApp.astro";
import Testimonials from "../components/Testimonials.astro";
import { supabase } from "../lib/supabase";

// Get the slug from the URL
const { slug } = Astro.params;

// Fetch service data from Supabase
const { data: service, error } = await supabase
    .from("services")
    .select("*")
    .eq("slug", slug)
    .single();

// If service not found, return 404
if (error || !service) {
    return Astro.redirect("/404");
}
---

<Layout
    title={service.title}
    description={service.intro_description?.substring(0, 160) ||
        service.hero_subtitle}
>
    <CTAWhatsApp
        message={`Hola, quiero reservar una cita para ${service.hero_title}`}
    />

    <!-- Hero Section -->
    <section
        class="relative h-[60vh] flex items-center justify-center overflow-hidden pt-32"
    >
        <div class="absolute inset-0 z-0">
            <img
                src={service.hero_image_url || "/img/placeholder.svg"}
                alt={service.hero_title}
                class="w-full h-full object-cover"
                id="hero-image"
            />
            <div
                class="absolute inset-0 bg-gradient-to-b from-brown-900/70 via-brown-800/50 to-cream-50"
            >
            </div>
        </div>
        <div class="text-center z-10 px-4 max-w-4xl mx-auto">
            <h1
                class="font-serif text-3xl sm:text-5xl md:text-7xl font-bold mb-4 md:mb-6 text-cream-50 reveal-text opacity-0"
            >
                {service.hero_title}
            </h1>
            {
                service.hero_subtitle && (
                    <p class="text-lg sm:text-xl md:text-2xl font-light text-cream-100 mb-8 reveal-text opacity-0">
                        {service.hero_subtitle}
                    </p>
                )
            }
        </div>
    </section>

    <!-- Intro Section -->
    {
        service.intro_title && service.intro_description && (
            <section class="py-20 bg-cream-50">
                <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                    <h2 class="text-3xl md:text-4xl font-serif font-bold text-brown-800 mb-8 reveal-text opacity-0">
                        {service.intro_title}
                    </h2>
                    <p
                        class="text-xl text-brown-600 leading-relaxed reveal-text opacity-0"
                        set:html={service.intro_description}
                    />
                </div>
            </section>
        )
    }

    <!-- Features Section -->
    {
        service.features_title && (
            <section class="py-20 bg-white">
                <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 items-center">
                        {service.features_image_url && (
                            <div class="relative reveal-element opacity-0">
                                <div class="overflow-hidden rounded-lg shadow-xl h-[500px]">
                                    <img
                                        src={service.features_image_url}
                                        alt={service.features_title}
                                        class="w-full h-full object-cover"
                                    />
                                </div>
                                <div class="absolute -bottom-6 -right-6 w-32 h-32 bg-gold-100 rounded-full -z-10" />
                            </div>
                        )}
                        <div class="space-y-8 reveal-text opacity-0">
                            <h2 class="text-3xl md:text-4xl font-serif font-bold text-brown-800">
                                {service.features_title}
                            </h2>
                            <ul class="space-y-6">
                                {service.feature_1_title && (
                                    <li class="flex items-start gap-4">
                                        <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gold-200 flex items-center justify-center text-brown-800 font-bold">
                                            1
                                        </span>
                                        <div>
                                            <h3 class="text-xl font-bold text-brown-800 mb-2">
                                                {service.feature_1_title}
                                            </h3>
                                            <p class="text-brown-600">
                                                {service.feature_1_description}
                                            </p>
                                        </div>
                                    </li>
                                )}
                                {service.feature_2_title && (
                                    <li class="flex items-start gap-4">
                                        <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gold-200 flex items-center justify-center text-brown-800 font-bold">
                                            2
                                        </span>
                                        <div>
                                            <h3 class="text-xl font-bold text-brown-800 mb-2">
                                                {service.feature_2_title}
                                            </h3>
                                            <p class="text-brown-600">
                                                {service.feature_2_description}
                                            </p>
                                        </div>
                                    </li>
                                )}
                                {service.feature_3_title && (
                                    <li class="flex items-start gap-4">
                                        <span class="flex-shrink-0 w-8 h-8 rounded-full bg-gold-200 flex items-center justify-center text-brown-800 font-bold">
                                            3
                                        </span>
                                        <div>
                                            <h3 class="text-xl font-bold text-brown-800 mb-2">
                                                {service.feature_3_title}
                                            </h3>
                                            <p class="text-brown-600">
                                                {service.feature_3_description}
                                            </p>
                                        </div>
                                    </li>
                                )}
                            </ul>
                        </div>
                    </div>
                </div>
            </section>
        )
    }

    <!-- Process Section -->
    {
        service.process_title && service.process_step_1_title && (
            <section class="py-20 bg-cream-100">
                <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                    <h2 class="text-3xl md:text-4xl font-serif font-bold text-brown-800 mb-12 reveal-text opacity-0">
                        {service.process_title}
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 reveal-element opacity-0">
                        {service.process_step_1_title && (
                            <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                                <div class="text-4xl mb-4">
                                    {service.process_step_1_icon || "1"}
                                </div>
                                <h3 class="text-xl font-bold text-brown-800 mb-3">
                                    {service.process_step_1_title}
                                </h3>
                                <p class="text-brown-600 text-sm">
                                    {service.process_step_1_description}
                                </p>
                            </div>
                        )}
                        {service.process_step_2_title && (
                            <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                                <div class="text-4xl mb-4">
                                    {service.process_step_2_icon || "2"}
                                </div>
                                <h3 class="text-xl font-bold text-brown-800 mb-3">
                                    {service.process_step_2_title}
                                </h3>
                                <p class="text-brown-600 text-sm">
                                    {service.process_step_2_description}
                                </p>
                            </div>
                        )}
                        {service.process_step_3_title && (
                            <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300">
                                <div class="text-4xl mb-4">
                                    {service.process_step_3_icon || "3"}
                                </div>
                                <h3 class="text-xl font-bold text-brown-800 mb-3">
                                    {service.process_step_3_title}
                                </h3>
                                <p class="text-brown-600 text-sm">
                                    {service.process_step_3_description}
                                </p>
                            </div>
                        )}
                    </div>
                    <div class="mt-12 reveal-text opacity-0">
                        <a
                            href={`https://wa.me/34613302914?text=Hola,%20quiero%20reservar%20cita%20para%20${service.hero_title}`}
                            class="inline-block bg-brown-800 text-cream-50 px-10 py-4 rounded-full hover:bg-gold-500 hover:text-brown-900 transition-all duration-300 font-medium"
                        >
                            Reservar cita ahora
                        </a>
                    </div>
                </div>
            </section>
        )
    }

    <Testimonials />

    <!-- SEO Content Section -->
    {
        service.seo_content && (
            <section class="py-16 bg-white">
                <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
                    <div
                        class="prose prose-lg max-w-none text-brown-700"
                        set:html={service.seo_content}
                    />
                </div>
            </section>
        )
    }

    <!-- Scripts -->
    <script>
        import { gsap } from "gsap";
        import { ScrollTrigger } from "gsap/ScrollTrigger";

        gsap.registerPlugin(ScrollTrigger);

        // Hero Animation
        gsap.to("#hero-image", {
            scale: 1.1,
            scrollTrigger: {
                trigger: "body",
                start: "top top",
                end: "bottom top",
                scrub: 1,
            },
        });

        // Reveal Text
        gsap.utils.toArray(".reveal-text").forEach((element: any) => {
            gsap.to(element, {
                opacity: 1,
                y: 0,
                duration: 1,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: element,
                    start: "top 85%",
                },
            });
        });

        // Reveal Elements
        gsap.utils.toArray(".reveal-element").forEach((element: any) => {
            gsap.to(element, {
                opacity: 1,
                y: 0,
                duration: 1.2,
                ease: "power3.out",
                scrollTrigger: {
                    trigger: element,
                    start: "top 80%",
                },
            });
        });
    </script>

    <style>
        .reveal-text,
        .reveal-element {
            transform: translateY(30px);
        }
    </style>
</Layout>
