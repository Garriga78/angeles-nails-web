---
import Layout from "../layouts/Layout.astro";
import CTAWhatsApp from "../components/CTAWhatsApp.astro";
import { supabase } from "../lib/supabase";

// Fetch published blog posts from Supabase
const { data: posts, error } = await supabase
    .from("blog_posts")
    .select("*")
    .eq("is_published", true)
    .order("published_at", { ascending: false });

if (error) {
    console.error("Error fetching blog posts:", error);
}
---

<Layout
    title="Blog | Angeles Nails Studio"
    description="Consejos, tendencias y novedades sobre manicura, pedicura, cejas y pestañas en nuestro blog."
>
    <CTAWhatsApp message="Hola, he visto vuestro blog y tengo una duda" />

    <!-- Hero Section -->
    <section
        class="relative h-[50vh] flex items-center justify-center overflow-hidden pt-20"
    >
        <div class="absolute inset-0 z-0">
            <img
                src="/img/placeholder.svg"
                alt="Blog Angeles Nails Studio"
                class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-black/50"></div>
        </div>
        <div class="text-center z-10 px-4 max-w-4xl mx-auto">
            <h1
                class="font-serif text-4xl md:text-6xl font-bold mb-4 text-white"
            >
                Nuestro <span class="text-gold-400">blog</span>
            </h1>
            <p
                class="text-lg md:text-xl font-light text-white max-w-2xl mx-auto"
            >
                Tendencias, consejos y secretos de belleza
            </p>
        </div>
    </section>

    <!-- Blog Grid -->
    <section class="py-20 bg-cream-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            {
                posts && posts.length > 0 ? (
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
                        {posts.map((post) => (
                            <article class="bg-white rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
                                <div class="h-48 overflow-hidden">
                                    <img
                                        src={
                                            post.image_url ||
                                            "/img/placeholder.svg"
                                        }
                                        alt={post.title}
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                                    />
                                </div>
                                <div class="p-6">
                                    <span class="text-xs font-semibold text-gold-600 uppercase tracking-wider capitalize">
                                        {post.category}
                                    </span>
                                    <h2 class="mt-2 text-xl font-serif font-bold text-brown-800">
                                        {post.title}
                                    </h2>
                                    <p class="mt-3 text-brown-600 text-sm leading-relaxed">
                                        {post.excerpt}
                                    </p>
                                    <a
                                        href={`/blog/${post.slug}`}
                                        class="mt-4 inline-block text-gold-600 font-medium hover:text-brown-800 transition-colors"
                                    >
                                        Leer más &rarr;
                                    </a>
                                </div>
                            </article>
                        ))}
                    </div>
                ) : (
                    <div class="text-center py-12">
                        <p class="text-gray-600 text-lg">
                            No hay artículos publicados todavía.
                        </p>
                    </div>
                )
            }
        </div>
    </section>
</Layout>
